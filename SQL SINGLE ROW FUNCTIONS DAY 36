select upper('kush') from dual;
select Lower('KUSH') from dual;
select initcap('kush vijay sahu')from dual;
select length('kushsahu') from dual;
select reverse('kushsahu')from dual;

select ename 
from scott.EMP
where length(ename)=5;

select ename from scott.EMP
where ename=Reverse(ename);

-- last char of ename should be upper case

select reverse(initcap(reverse(ename))) from scott.emp;

SELECT REPLACE('MILLIER','I','$') FROM DUAL;
SELECT REPLACE('NANDGAON','A','123')FROM DUAL;
SELECT REPLACE('SOLAPUR','SOLA','A')FROM DUAL;
SELECT REPLACE('NAGPUR','AP','NG')FROM DUAL;
SELECT REPLACE('NANDGAON','A','')FROM DUAL;

-- REPLACE ALL A WITH $
SELECT ENAME,REPLACE(ENAME,'A','$') FROM SCOTT.EMP;

-- ENAME IF THE NAME IS HAVING EXACTLY ONE A
SELECT ENAME 
FROM SCOTT.EMP
WHERE LENGTH(ENAME)-1=LENGTH(REPLACE(ENAME,'A',''));

SELECT CONCAT('THE NAME  IS ',CONCAT(ENAME,CONCAT('GETTING SAL OF ',CONCAT(SAL,CONCAT('AND HIRED ON',HIREDATE)))))
FROM SCOTT.EMP;

SELECT SUBSTR('KUSHSAHU',1) FROM DUAL; -- KUSHSAHU

SELECT SUBSTR('KUSHSAHU',1,3) FROM DUAL; -- KUS

SELECT SUBSTR('KUSHSAHU',-1) FROM DUAL; -- U

SELECT SUBSTR('KUSHSAHU',-1,5) FROM DUAL; -- U

SELECT SUBSTR('KUSHSAHU',0) FROM DUAL; -- KUSHSAHU

SELECT SUBSTR('KUSHSAHU',-1,-5) FROM DUAL; -- KUSHSAHU

SELECT SUBSTR('KUSHSAHU',1,-1) FROM DUAL; -- KUSHSAHU

SELECT SUBSTR('KUSHSAHU',-8) FROM DUAL; -- KUSHSAHU

SELECT SUBSTR('KUSHSAHU',-8,7) FROM DUAL; -- KUSHSAH

-- REPLACE FIRST CHARACTER WITH $
SELECT '$'||SUBSTR(ENAME,2) FROM SCOTT.EMP;

-- REPLACE LAST EITH $
SELECT SUBSTR(ENAME,1,LENGTH(ENAME)-1)||'$' FROM SCOTT.EMP;

-- SECOND CHAR

SELECT SUBSTR(ENAME,1,1)||'$'||SUBSTR(ENAME,3) FROM SCOTT.EMP;

-- FIRST AND LAST

SELECT '%'||SUBSTR(ENAME,2,LENGTH(ENAME)-2)||'$' FROM SCOTT.EMP;

-- FIRST SECOND AND LAST SECONG

SELECT SUBSTR(ENAME,1,1)||'*'||SUBSTR(ENAME,3,LENGTH(ENAME)-4)||'*'||SUBSTR(ENAME,-1) FROM SCOTT.EMP;

-- FIRST MIDDLE LAST
SELECT '*'||SUBSTR(ENAME,2,LENGTH(ENAME)/2-1)||'*'||SUBSTR(ENAME,LENGTH(ENAME)/2+2,LENGTH(ENAME)/2-1)||'*' FROM SCOTT.EMP;

SELECT SRNO, CASE WHEN SRNO=0 THEN 1 WHEN SRNO=1 THEN 0 ELSE NULL END FROM DUAL;


SELECT ENAME, SAL, CASE WHEN SAL>2000 THEN 'BEST' WHEN SAL<2000 THEN 'WORST' ELSE  NULL  END AS SIGN 
FROM SCOTT.EMP;


SELECT LPAD('KUSH',6,'*') FROM DUAL;

SELECT RPAD('KUSH',6,'*') FROM DUAL;


SELECT LPAD(SUBSTR(ENAME,LENGTH(ENAME)/2+1),LENGTH(ENAME),'*') 
FROM SCOTT.EMP
WHERE MOD(LENGTH(ENAME),2)=0;


SELECT RPAD(SUBSTR(ENAME,1,LENGTH(ENAME)/2),LENGTH(ENAME),'*') 
FROM SCOTT.EMP
WHERE MOD(LENGTH(ENAME),2)=0;

select LPAD('*',LENGTH(ENAME),'*') FROM SCOTT.EMP;

SELECT INSTR('MILLER','I',-1,1) FROM DUAL;

SELECT SUBSTR(ENAME,1,1)||'AA'||SUBSTR(ENAME,3)
FROM SCOTT.EMP
WHERE  INSTR(ENAME,'A',1,1)=2;


SELECT SYSDATE FROM DUAL;

SELECT SYSTIMESTAMP FROM DUAL;

SELECT TO_CHAR(SYSDATE, 'Y') FROM DUAL;

SELECT NVL(COMM,000) FROM SCOTT.EMP;