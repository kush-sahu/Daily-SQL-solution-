-- PSEUDO COLUMN ROWNUM 


-- Q1 WAQTD TOP 3 ROWS OF EMP TABLE
SELECT *
FROM SCOTT.EMP
WHERE ROWNUM<=3;

-- Q2 WAQTD TOP 10 EMP RECORDS
SELECT *
FROM SCOTT.EMP
WHERE ROWNUM<=10;

-- Q3 WAQTD EXACTLY 1ST ROW OF EMP TABLE
SELECT *
FROM SCOTT.EMP
WHERE ROWNUM=1;

-- Q4 WAQTD EXACTLY 2ND ROW OF EMP TABLE
SELECT *
FROM SCOTT.EMP 
WHERE ROWNUM=2;  -- <=== THIS IS NOT VALID BECAUSE ROWNUM START WITH 1 SO IT WILL NOT GENERATE IF THE CONDITION ID FALSE 
-- OR 
SELECT *
FROM (SELECT ROWNUM R, SCOTT.EMP.*
      FROM SCOTT.EMP)
WHERE R=2;  

-- Q5 WAQTD EXACTLY 10TH,13TH AND 11TH ROW
SELECT *
FROM (SELECT ROWNUM R ,SCOTT.EMP.*
     FROM SCOTT.EMP)
WHERE R IN(10,11,13);     